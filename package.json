{
  "name": "pixiv-downloader",
  "version": "0.9.9",
  "description": "An app that downloads images & ugoira from Pixiv",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run clean && rsbuild build && electron dist/main/index.js",
    "build": "npm run clean ./build && rsbuild build && electron-builder -p never",
    "clean": "del-cli ./dist"
  },
  "keywords": [
    "pixiv",
    "downloader",
    "ugoira",
    "anime",
    "cute"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Moebytes/Pixiv-Downloader"
  },
  "build": {
    "appId": "com.moebytes.pixivdl",
    "productName": "Pixiv Downloader",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": "arm64"
      },
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "title": "${productName}",
      "background": "./assets/background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": "x64"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Pixiv Downloader",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "linux": {
      "target": {
        "target": "appImage",
        "arch": "x64"
      },
      "category": "Utility"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "Pixiv-Downloader",
      "owner": "Moebytes",
      "releaseType": "draft"
    },
    "asarUnpack": "node_modules/pixiv.ts",
    "asar": false
  },
  "author": "Moebytes",
  "license": "CC BY-NC 4.0",
  "devDependencies": {
    "@electron-rsbuild/plugin-main": "^0.0.12",
    "@electron-rsbuild/plugin-preload": "^0.0.12",
    "@electron-rsbuild/plugin-renderer": "^0.0.12",
    "@rsbuild/core": "^1.7.3",
    "@rsbuild/plugin-less": "^1.6.0",
    "@rsbuild/plugin-node-polyfill": "^1.4.4",
    "@rsbuild/plugin-react": "^1.4.5",
    "@rsbuild/plugin-type-check": "^1.3.3",
    "@svgr/webpack": "^8.1.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "cross-env": "^10.1.0",
    "del-cli": "^7.0.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "axios": "^1.13.5",
    "base64url": "^3.0.1",
    "bootstrap": "^5.3.8",
    "electron-click-drag-plugin": "^2.0.2",
    "electron-store": "^8.0.0",
    "image-size": "^2.0.2",
    "magic-bytes.js": "^1.13.0",
    "pixiv.ts": "^0.8.8",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "react-reorder": "^3.0.0-alpha.7",
    "shade-blend-color": "^1.0.0"
  }
}
